{
  "name": "back-new",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -b tsconfig.build.json",
    "start": "node dist/index.js",
    "database:run": "docker compose up -d",
    "report:reset": "rm -rf report && mkdir report",
    "test": "NODE_ENV='test' npm run test:setup && jest ./test",
    "test:setup": "NODE_ENV='test' npm run migrate:reset && npm run seed:required",
    "test:unit": "NODE_ENV='test' npm run test:setup && jest ./test/cases/unit",
    "test:integration": "NODE_ENV='test' npm run test:setup && jest ./test/cases/integration",
    "test:E2E": "NODE_ENV='test' npm run test:setup && jest ./test/cases/E2E",
    "pm2:serve": "pm2 restart dist/index.js --name 'icook-backend' || pm2 start dist/index.js --name 'icook-backend'",
    "pm2:stop": "pm2 stop icook-backend",
    "pm2:delete": "pm2 delete icook-backend",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier ./src/ --write",
    "format:all": "prettier ./ --write",
    "format:test": "prettier ./test/ --write",
    "migrate": "sequelize-cli db:migrate --config ./src/database/sequelize.js",
    "migrate:undo": "sequelize-cli db:migrate:undo --config ./src/database/sequelize.js",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all --config ./src/database/sequelize.js",
    "migrate:reset": "npm run migrate:undo:all && npm run migrate",
    "migrate:status": "sequelize-cli db:migrate:status --config ./src/database/sequelize.js",
    "migration:generate": "sequelize-cli migration:generate --config ./src/database/sequelize.js --name",
    "seed": "sequelize-cli db:seed:all --config ./src/database/sequelize.js",
    "seed:file": "sequelize-cli db:seed --config ./src/database/sequelize.js --seed",
    "seed:required": "npm run seed:file 20250413171957-add-roles.js && npm run seed:file 20250413172003-add-permissions.js && npm run seed:file 20250413172012-add-role-permissions.js && npm run seed:file 20250418004424-add-subscription-plans.js && npm run seed:file 20250418004429-add-subscription-benefits.js && npm run seed:file 20250418004433-add-subscription-permissions.js && npm run seed:file 20250418004514-add-modules.js",
    "seed:undo": "sequelize-cli db:seed:undo --config ./src/database/sequelize.js",
    "seed:undo:all": "sequelize-cli db:seed:undo:all --config ./src/database/sequelize.js",
    "seed:status": "sequelize-cli db:seed:status --config ./src/database/sequelize.js",
    "seed:generate": "sequelize-cli seed:generate --config ./src/database/sequelize.js --name"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.22.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@types/pino": "^7.0.4",
    "babel-jest": "^29.7.0",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/inversify": "^2.0.32",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.11",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "inversify": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.14.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pm2": "^6.0.5",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.6",
    "sequelize-cli": "^6.6.2",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.7.1",
    "zod": "^3.24.2"
  }
}
